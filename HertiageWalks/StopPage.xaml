<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HertiageWalks.StopPage"
            xmlns:vm="clr-namespace:HertiageWalks.Core.ViewModel;assembly=HertiageWalks.Core">
    <ContentPage.BindingContext>
        <vm:StopViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding StopName}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="{Binding StopImage}" />
            <Label Text="{Binding StopStreetlocation}"/>
            <Label Text="{Binding StopShortDesc}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>