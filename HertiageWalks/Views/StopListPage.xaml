<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HertiageWalks.Views.StopList"
               xmlns:vm="clr-namespace:HertiageWalks.ViewModel">
    
    <ContentPage.BindingContext>
        <vm:StopViewModel/>
    </ContentPage.BindingContext>
    <StackLayout>
        <ListView  x:Name="TrailView">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Orientation="Horizontal">
                        <Image Source="{Binding StopImage}" />
                        <Label Text="{Binding StopName}"
                                TextColor="#f35e20" />
                        <Label Text="{Binding StopStreetlocation}"
                                HorizontalOptions="EndAndExpand"
                                TextColor="#503026" />
                        <Button Text="View" CommandParameter="{Binding StopId}" Clicked="StopClicked"></Button>
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
    
    </StackLayout>
</ContentPage>