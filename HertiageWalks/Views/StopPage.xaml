<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HertiageWalks.Views.StopPage"
            xmlns:vm="clr-namespace:HertiageWalks.ViewModel">
    <ContentPage.BindingContext>
        <vm:StopViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding StopName}"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="{Binding StopImage}" />
            <Label Text="{Binding StopStreetlocation}"/>
            <Label Text="{Binding StopShortDesc}"/>
        
        <StackLayout BackgroundColor="LightGray">
            <Button x:Name="AudioButton" Text="play"
                            BackgroundColor="LightGray"  Clicked="PlayClicked"/>
        </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>